<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Online Book Shop</title>
    <link href="/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Option 1: Include in HTML -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
    
</head>
<body>
    <nav class="navbar navbar-expand-lg bg-primary" data-bs-theme="dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="/Home/Index">EBookShop</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarColor01">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link active" href="/Home/Index">
                            Home
                            <span class="visually-hidden">(current)</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Home/Privacy">Privacy</a>
                    </li>
                     @if (User.IsInRole(BookShoppingCartMartUI.Contants.Roles.Admin.ToString())) 
                       {
                        <li class="nav-item">
                            <a class="nav-link" href="/AdminOperations/AllOrders">Orders</a>
                        </li>
                            <li class="nav-item">
                                <a class="nav-link"href="/Stock/Index">Stock</a>
                            </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Genre/Index">Genre</a>
                        </li>
                       }
                   
                </ul>
                <partial name ="_LoginPartial"/>
               
            </div>
        </div>
    </nav>
   
    <div class="container">
        <div class="my-2">
            <partial name="Notification"/>
        </div>
        @RenderBody()
    </div>
</body>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js" integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI" crossorigin="anonymous"></script>
   <script>
    loadCartCount();
    async function loadCartCount(){
   
        try{
            var response = await fetch(`/Cart/GetTotalItemInCart`);
            if(response.status==200){
                var result = await response.json();
               
                var cartItemCountEl = document.getElementById("cartCount");
                cartItemCountEl.innerHTML=result;
            }
        }
        catch(err){
            console.log(err);
        }
    }
  </script>
</html>
    @await RenderSectionAsync("Scripts", required: false)

